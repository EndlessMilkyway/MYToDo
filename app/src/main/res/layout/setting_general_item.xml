<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/generalItemWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_item_shape"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/generalItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/generalItemWrapper"
        app:layout_constraintLeft_toLeftOf="@+id/generalItemWrapper"
        app:layout_constraintTop_toTopOf="@+id/generalItemWrapper" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/generalItemSwitch"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/generalItemWrapper"
        app:layout_constraintRight_toRightOf="@+id/generalItemWrapper"
        app:layout_constraintTop_toTopOf="@+id/generalItemWrapper" />

</androidx.constraintlayout.widget.ConstraintLayout>